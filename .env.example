# ============================================================
# Django / Security
# ============================================================

# Enable only for local development
DEBUG=0

# Django cryptographic secret (must be unique per environment)
SECRET_KEY=change-me

# Comma-separated list of allowed Host headers
ALLOWED_HOSTS=example.com

# Comma-separated list of trusted origins for CSRF protection
CSRF_TRUSTED_ORIGINS=https://example.com

# Reverse proxy / HTTPS handling (set to 1 behind Caddy/Nginx)
USE_X_FORWARDED_HOST=1
SECURE_PROXY_SSL_HEADER=1

# Cookie + redirect security (recommended when HTTPS is enforced)
SECURE_SSL_REDIRECT=1
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1

# HTTP Strict Transport Security (increase gradually in production)
SECURE_HSTS_SECONDS=86400
SECURE_HSTS_INCLUDE_SUBDOMAINS=0
SECURE_HSTS_PRELOAD=0

# Application timezone
TIME_ZONE=UTC


# ============================================================
# PostgreSQL
# ============================================================

POSTGRES_DB=alliancehub
POSTGRES_USER=alliancehub
POSTGRES_PASSWORD=change-me
POSTGRES_HOST=db
POSTGRES_PORT=5432


# ============================================================
# EVE Online SSO / ESI
# ============================================================

# Network timeout (seconds) for ESI / SSO HTTP requests
EVE_HTTP_TIMEOUT=10

EVE_CLIENT_ID=change-me
EVE_CLIENT_SECRET=change-me
EVE_CALLBACK_URL=https://example.com/sso/callback/

EVE_AUTH_URL=https://login.eveonline.com/v2/oauth/authorize
EVE_TOKEN_URL=https://login.eveonline.com/v2/oauth/token
EVE_VERIFY_URL=https://login.eveonline.com/oauth/verify
EVE_ESI_URL=https://esi.evetech.net


# ============================================================
# Logging
# ============================================================

# Application log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log to stdout by default; enable file logging only if required
LOG_TO_FILE=0
LOG_FILE_PATH=logs/app.log
